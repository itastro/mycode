    // 车辆过滤
    function carFilter(data) {
      var roles = JSON.parse(window.localStorage.successUser).data.roles;
      var isRat = false
      roles.forEach(item => {
        if (item.keyWord == 'rat') {
          isRat = true
        }
      });

      var arr = [];
      if (isRat) {
        data.forEach(item => {
          var rgx = new RegExp('京');
          if (rgx.test(item.vPlate) || rgx.test(item.licenseNo)) {
            arr.push(item)
          }
        });
      } else {
        arr = data
      }
      return arr
    }
